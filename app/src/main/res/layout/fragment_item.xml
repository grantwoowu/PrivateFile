<?xml version="1.0" encoding="utf-8"?>
<com.grant.privately.file.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/private_file_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"/>
    <CheckBox
        android:id="@+id/private_file_iv_seleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/private_file_imageView"
        android:layout_alignTop="@id/private_file_imageView"
        android:layout_margin="10dp"
        android:checked="false"
        android:visibility="gone"
        android:background="@drawable/cbtn_bg"
        android:button="@null"/>
</com.grant.privately.file.widget.SquareLayout>
